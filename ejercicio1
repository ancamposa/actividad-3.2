menu=["Numero primo","Factorial", "Palíndrome", "Salir"]
opcion=10
num=0

while opcion<4 or opcion>0:
    print("1.",menu[0])
    print("2.",menu[1])
    print("3.",menu[2])
    print("4.",menu[3])
    opcion=int(input("Seleccione: "))
    
    if opcion==1:
        print("Usted a seleccionado la OPCION 1")
        while num<1 or num>15:
            num=int(input("Ingrese numero entre 1 y 15: "))
        
        if num%2==0:
            print("El número no es primo")
        else:
            print("El número es primo")
        
        break
    if opcion == 2:
        print("Usted a seleccionado la OPCION 2")
        # Aqui el codigo
        break
    if opcion == 3:
        print("Usted a seleccionado la OPCION 3")
        palindromo = True
        texto = input("Ingrese la palabra que desea evaluar: ")

        for i in range(len(texto)//2):
            if texto[i].lower() != texto[-i-1].lower():
                palindromo = False
            break

        if palindromo:
            print("El texto es palindromo!")
        else:
            print("El texto no es palindromo!")
        break
    if opcion == 4:
        print("Usted a salido del programa")
        print("¡Gracias por acceder!")
        print("AUTORES: Antonio Campos & Alonso Cruz")
        break
